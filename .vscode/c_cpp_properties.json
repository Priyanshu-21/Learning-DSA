{
  "configurations": [
    {
      "name": "C/C++: GCC",
      "includePath": [
        "${workspaceFolder}/**",
        "/usr/include",
        "/usr/local/include"
      ],
      "defines": [],
      "compilerPath": "/usr/bin/g++",      // or clang++ if you use Clang
      "cStandard": "c11",
      "cppStandard": "c++17",
      "intelliSenseMode": "linux-gcc-x64", // or "linux-clang-x64"
      "browse": {
        "path": [
          "${workspaceFolder}/**",
          "/usr/include",
          "/usr/local/include"
        ],
        "limitSymbolsToIncludedHeaders": true
      }
    }
  ],
  "version": 4
}
